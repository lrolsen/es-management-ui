    "version": "0.2.0",
    "configurations": [
      
       {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
  "sourceMapPathOverrides": {
                 "webpack:///C:*":"C:/*"
             }
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            /*"diagnosticLogging": true,*/
            "webRoot": "${workspaceRoot}",
            "url": "http://localhost:3000/*",
  "sourceMapPathOverrides": {
                 "webpack:///C:*":"C:/*"
             }
        }




    ]
}